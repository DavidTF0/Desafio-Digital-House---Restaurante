<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prato_principal_restaurante"
                android:layout_width="match_parent"
                android:layout_height="346dp"
                android:src="@drawable/prato_principal_restaurante"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/nome_do_restaurante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF1F2D3D"
                android:textSize="36sp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/prato_principal_restaurante"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Tony Roma's"/>

            <TextView
                android:id="@+id/endereco_restaurante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF8492A6"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/nome_do_restaurante"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Av....."/>

            <TextView
                android:id="@+id/horario_de_fechamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF8492A6"
                android:textSize="16sp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/endereco_restaurante"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Fecha as 22:00"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
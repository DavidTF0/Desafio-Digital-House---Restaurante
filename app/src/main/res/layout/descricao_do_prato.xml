<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/prato_principal_tela_descricao"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:src="@drawable/prato_principal"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_nome_do_prato_tela_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/prato_principal_tela_descricao"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Prato Principal"/>

    <TextView
        android:id="@+id/txt_descricao_prato_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#FF8492A6"
        app:layout_constraintTop_toBottomOf="@+id/prato_principal_tela_descricao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text=".\naaaaa\naaa\naaa\naaa"/>

</androidx.constraintlayout.widget.ConstraintLayout>